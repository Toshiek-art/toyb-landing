---
import Logo from "../components/Logo.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

export const prerender = true;

const variants: Array<"slice" | "bar"> = ["slice", "bar"];
const sizes: Array<"sm" | "md" | "lg"> = ["sm", "md", "lg"];
---

<BaseLayout
  title="toyb | Logo lab"
  description="Wordmark comparison lab for toyb."
  canonical="https://toyb.space/logo-lab/"
>
  <section class="section logo-lab" aria-labelledby="logo-lab-title">
    <header class="section-head">
      <h1 id="logo-lab-title">Logo Lab</h1>
      <p>Pick the one that reads intentional at 16px.</p>
    </header>

    <div class="logo-lab-grid">
      {
        variants.map((variant) =>
          sizes.map((size) => (
            <article class="logo-lab-card">
              <h2>
                {variant} Â· {size}
              </h2>
              <div class="logo-lab-sample">
                <Logo variant={variant} size={size} asLink={false} />
              </div>
              <div class="logo-lab-sample logo-lab-sample--surface">
                <Logo variant={variant} size={size} asLink={false} />
              </div>
            </article>
          )),
        )
      }
    </div>
  </section>
</BaseLayout>
